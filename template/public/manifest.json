{
  "manifest_version": 2,

  "name": "React App",
  "description": "Create React App Chrome Extension Sample.",
  "version": "1.0",
  "icons": {
    "128": "favicon.png"
  },
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "512": "favicon.png",
      "128": "favicon.png",
      "48": "favicon.png",
      "32": "favicon.png",
      "16": "favicon.png"
    },
    "default_title": "React App"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}