{
  "manifest_version": 2,

  "name": "React Chrome Extension",
  "description": "Create React App TypeScript Chrome Extension Sample.",
  "version": "1.0",
  "icons": {
    "128": "favicon.png"
  },
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "trampoline.html",
    "static/js/trampoline.js"
  ],
  "browser_action": {
    "default_icon": {
      "512": "favicon.png",
      "128": "favicon.png",
      "48": "favicon.png",
      "32": "favicon.png",
      "16": "favicon.png"
    },
    "default_title": "React Chrome Extension"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}